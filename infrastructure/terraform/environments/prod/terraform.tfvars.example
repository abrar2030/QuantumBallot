# Example Terraform variables for prod environment
# Copy this file to terraform.tfvars and fill in your values

aws_region         = "us-east-1"
environment_name   = "prod"

# Backend configuration
backend_port                = 3000
backend_docker_image_tag    = "v1.0.0"  # Use specific version tags in production
backend_instance_type       = "t3.medium"
backend_ami_id              = "ami-0c55b159cbfafe1f0"  # Update with current Amazon Linux 2 AMI

# Frontend configuration
frontend_domain_name        = "quantumballot.example.com"
frontend_certificate_arn    = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxx"
